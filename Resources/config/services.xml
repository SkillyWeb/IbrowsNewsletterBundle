<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="ibrows_newsletter.template_manager" class="Ibrows\Bundle\NewsletterBundle\Service\TemplateManager">
			<argument>%ibrows_newsletter.templates%</argument>
			<argument>%ibrows_newsletter.templates.newsletter%</argument>
        </service>
        
        <service id="ibrows_newsletter.class_manager" class="Ibrows\Bundle\NewsletterBundle\Service\ClassManager">
			<argument>%ibrows_newsletter.classes.model%</argument>
			<argument>%ibrows_newsletter.classes.form%</argument>
        </service>
        
        <service id="ibrows_newsletter.block_manager" class="Ibrows\Bundle\NewsletterBundle\Service\BlockManager">
			<argument>%ibrows_newsletter.blocks%</argument>
        </service>
        
        <service id="ibrows_newsletter.annotation_driver" class="Ibrows\Bundle\NewsletterBundle\Annotation\AnnotationDriver">
			<argument type="service" id ="service_container" />
            <argument>%ibrows_newsletter.annotations%</argument>
            <tag name="kernel.event_listener" event="kernel.controller" method="onKernelController" />
        </service>
        
        <service id="ibrows_newsletter.annotation.handler.wizardaction" class="Ibrows\Bundle\NewsletterBundle\Annotation\WizardAction\WizardActionAnnotationHandler">
            <argument type="service" id ="router" />
        </service>
    </services>

</container>